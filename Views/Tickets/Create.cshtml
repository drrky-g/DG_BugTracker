@model DG_BugTracker.Models.Ticket

@{
    ViewBag.Header = "New Ticket";
    ViewBag.Subheader = "Create a new ticket for a project you're on.";
}

        <!-- form goes here! -->
       @using (Html.BeginForm("Create", "Tickets", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-12 text-left">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row" style="margin-top: 30px;">
                <div class="col-md-12">
                    <!-- form here -->
                    <div class="form-group">
                        <label class="control-label col-md-2">
                            <!-- Property Label Here-->
                            Title
                        </label>
                        <div class="col-md-10">
                            <!-- HTML Helper Input-->
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control text-muted", placeholder= "Name your ticket." } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">
                            <!-- Property Label Here-->
                            Description
                        </label>
                        <div class="col-md-10">
                            <!-- HTML Helper Input-->
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control text-muted", placeholder = "Short Description of Ticket Issue." } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">
                            <!-- Property Label Here-->
                            Project
                        </label>
                        <div class="col-md-10">
                            <!-- HTML Helper Input-->
                            @Html.DropDownList("ProjectId", null, htmlAttributes: new { @class = "form-control text-muted" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">
                            <!-- Property Label Here-->
                            Type
                        </label>
                        <div class="col-md-10">
                            <!-- HTML Helper Input-->
                            @Html.DropDownList("TicketTypeId", null, htmlAttributes: new { @class = "form-control text-muted" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">
                            <!-- Property Label Here-->
                            Priority
                        </label>
                        <div class="col-md-10">
                            <!-- HTML Helper Input-->
                            @Html.DropDownList("TicketPriorityId", null, htmlAttributes: new { @class = "form-control text-muted" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-left">
                    <button type="submit" class="btn bg-brand-primary-solid" style="margin-left: 15px;">Submit Ticket</button>
                </div>
            </div>
        }

<div>
    @Html.ActionLink("Dashboard", "Dashboard", "Home", null, htmlAttributes: new { @class="btn btn-link"})
</div>


