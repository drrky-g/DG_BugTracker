@model DG_BugTracker.Models.Ticket

@{
    ViewBag.Title = "Create";
}

<div class="card">
    <div class="card-header card-header-success">
        <h3 class="has-white">Create A Ticket</h3>
    </div>
    <div class="card-body">
        <!-- form goes here! -->
       @using (Html.BeginForm("Create", "Tickets", FormMethod.Post, htmlAttributes: new { @class = "" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-12 text-left">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <!-- form here -->
                    <div class="form-group has-success">
                        <label class="control-label col-md-2">
                            <!-- Property Label Here-->
                            Title
                        </label>
                        <div class="col-md-10">
                            <!-- HTML Helper Input-->
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control text-muted", placeholder= "Name your ticket." } })
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="control-label col-md-2">
                            <!-- Property Label Here-->
                            Description
                        </label>
                        <div class="col-md-10">
                            <!-- HTML Helper Input-->
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control text-muted", placeholder = "Short Description of Ticket Issue." } })
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="control-label col-md-2">
                            <!-- Property Label Here-->
                            Project
                        </label>
                        <div class="col-md-10">
                            <!-- HTML Helper Input-->
                            @Html.DropDownList("ProjectId", null, htmlAttributes: new { @class = "form-control text-muted" })
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="control-label col-md-2">
                            <!-- Property Label Here-->
                            Type
                        </label>
                        <div class="col-md-10">
                            <!-- HTML Helper Input-->
                            @Html.DropDownList("TicketTypeId", null, htmlAttributes: new { @class = "form-control text-muted" })
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="control-label col-md-2">
                            <!-- Property Label Here-->
                            Priority
                        </label>
                        <div class="col-md-10">
                            <!-- HTML Helper Input-->
                            @Html.DropDownList("TicketPriorityId", null, htmlAttributes: new { @class = "form-control text-muted" })
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="control-label col-md-2">
                            <!-- Property Label Here-->
                            Status
                        </label>
                        <div class="col-md-10">
                            <!-- HTML Helper Input-->
                            @Html.DropDownList("TicketStatusId", null, htmlAttributes: new { @class = "form-control text-muted" })
                        </div>
                    </div>
               @if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
                {
                    <div class="form-group has-success">
                        <label class="control-label col-md-2">
                            <!-- Property Label Here-->
                            Assignee
                        </label>
                        <div class="col-md-10">
                            <!-- HTML Helper Input-->
                            @Html.DropDownList("AssignedToUserId", null, htmlAttributes: new { @class = "form-control text-muted" })
                        </div>
                    </div>
                }

                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-lg btn-wd btn-success">Submit Ticket</button>
                </div>
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to Ticket Index", "Index", null, htmlAttributes: new { @class="btn btn-danger btn-lg btn-wd"})
</div>


