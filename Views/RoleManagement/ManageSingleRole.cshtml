<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("ManageSingleRole", "RoleManagement", FormMethod.Post, new { @class = "col-md-12", style="margin-top: 100px;" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("UserId", (string)ViewBag.UserId)
            <div class="row">
                <div class="col-md-12">
                    <h3 class="text-muted">
                        Assign Role:
                    </h3>
                    @Html.DropDownList("UserRole", null, "--Select Role--", htmlAttributes: new { @class = "form-control text-muted" })
                </div>
            </div>
            <div class="row text-left">
                <div class="col-md-12">
                    <button type="submit" class="btn bg-brand-primary-solid">Assign Role</button>
                </div>
            </div>
        }
    </div>
</div>

     


