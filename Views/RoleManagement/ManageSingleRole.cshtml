
@{
    ViewBag.Title = "Manage Role";
}

    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
        <div class="card card-stats">
            <div class="card-header card-header-success card-header-icon">
                <div class="card-icon">
                    <!-- viewbag avatar instead of icon?-->
                    <i class="material-icons">perm_identity</i>
                </div>
                <p class="card-category text-success">Manage Role</p>
                <h3 class="card-title text-success">
                    <!-- display user name here?-->
                    @ViewBag.UserName
                </h3>
            </div>
            <div class="card-footer">
                @using (Html.BeginForm("ManageSingleRole", "RoleManagement", FormMethod.Post, new { @class = "col-md-12" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("UserId", (string)ViewBag.UserId)

                    <div class="form-group">
                        <div class="col-md-10">
                            <h4 class="text-success">
                                Assign Role:
                            </h4>
                            @Html.DropDownList("UserRole", null, "--Select Role--", htmlAttributes: new { @class = "form-control text-muted" })
                        </div>
                    </div>
                    <div class="form-group text-right">
                        <button type="submit" class="btn btn-wd btn-sm btn-success">Assign Role</button>
                    </div>
                }
            </div>
        </div>
        <div class="text-left has-white">
            @Html.ActionLink("Return to User Index", "UserIndex", "RoleManagement", new { @class = "btn btn-success" })
        </div>
    </div>


