@using DG_BugTracker.ViewModels;
@model ManageMultipleProjectsVM


<!-----------------------------
    Manage user projects view model:
    User Id
    User Name
    User Avatar
    User Email
    User Role
    List of Users current projects
    MultiSelectList for form
    ------------------------------->
@{ 
    ViewBag.Header = "Manage Projects";
    ViewBag.Subheader = $"Assign projects for {Model.FullName}";
}


@using (Html.BeginForm("ManageUsersMultipleProjects", "RoleManagement", FormMethod.Post, null))
{
    <div class="card col-md-9">
        <div class="card-header">
            <div class="row">
                <div class="col-md-8">
                    <h4 class="card-title ">Select Projects<small>(Ctrl + Click to select multiple Projects)</small></h4>
                </div>
            </div>
        </div>
        <div class="card-body">
            @Html.AntiForgeryToken()
            @Html.Hidden("UserId", Model.Id)
            <div class="row">
                <div class="col-md-8" id="multiselect">
                    @Html.ListBox("ProjectSelect", null, htmlAttributes: new { @class = "form-control", size = "25", style = "height: 125px" })
                </div>
                <button type="submit" class="btn btn-wd btn-success">Assign Project(s)</button>
            </div>
        </div>
    </div>
}
<div class="text-left has-white">
    @Html.ActionLink("Return to User Index", "UserIndex", "RoleManagement", new { @class = "btn btn-success" })
</div>