@{ Layout = null;
}

@using DG_BugTracker.Models
@model LoginViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        Password Reset - Bug Tracker
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <!-- CSS Files -->
    <link href="~/Content/LogInAndRegisterAssets/css/material-kit.css" rel="stylesheet" />
</head>

<body class="login-page sidebar-collapse">
    <div class="page-header header-filter" style="background-image: url('/Content/LogInAndRegisterAssets/img/bg3.jpg'); background-size: cover; background-position: top center;">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 ml-auto mr-auto">
                    <div class="card card-login">

                        <div class="card-header card-header-danger text-center">
                            <h4 class="card-title">Password Reset</h4>
                        </div>
                        <h4 class="text-danger text-center">We've sent a link to your email.</h4>
                    </div>
                    <!-- Send to Register form -->
                    <div class="text-center has-white">
                        @Html.ActionLink("Log In", "Login", "Account", new { @class = "btn btn-danger btn-wd" })
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer">
            <div class="container">

                <div class="copyright float-right">
                    &copy;
                    <script>document.write(new Date().getFullYear())</script> - Derrick Gordon
                </div>
            </div>
        </footer>
    </div>
    <!--   Core JS Files   -->
    <script src="~/Content/LogInAndRegisterAssets/js/core/jquery.min.js"></script>
    <script src="~/Content/LogInAndRegisterAssets/js/core/popper.min.js"></script>
    <script src="~/Content/LogInAndRegisterAssets/js/core/bootstrap-material-design.min.js"></script>
    <script src="~/Content/LogInAndRegisterAssets/js/plugins/moment.min.js"></script>


    <script src="~/Content/LogInAndRegisterAssets/js/material-kit.js"></script>
</body>

</html>


